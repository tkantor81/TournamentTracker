@model IEnumerable<TournamentTracker.Models.Participant>

<table class="table">
    <tr>
        <th>
            @Html.Raw("Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Person.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var participant in Model)
    {
        <tr>
            <td>
                @Html.Raw(participant.Person.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => participant.Person.Email)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = participant.ID }) |
                <button type="button" class="btn btn-default deleteParticipant" data-ID="@participant.ID">Delete</button>
            </td>
        </tr>
    }

</table>
