@model IEnumerable<TournamentTracker.Models.Person>

@{
    ViewBag.Title = "Index";
}

<h2>People</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Raw("Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var person in Model) {
    <tr>
        <td>
            @Html.Raw(person.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => person.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=person.ID }) |
            @Html.ActionLink("Details", "Details", new { id=person.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=person.ID })
        </td>
    </tr>
}

</table>
